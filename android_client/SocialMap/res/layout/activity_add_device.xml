<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/etGroupId"
            android:layout_gravity="center_horizontal"
            android:hint="Group ID"
            android:gravity="center"
        android:layout_marginTop="10dp" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/etCode" android:layout_gravity="center_horizontal" android:hint="Confirmation code"
            android:gravity="center"
        android:layout_marginTop="10dp" />
    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Register"
            android:id="@+id/btnRegister" android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
</LinearLayout>